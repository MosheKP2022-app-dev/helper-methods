<div>
  <div>
    <h1>
      director #<%= @director.id %> details
    </h1>

    <div>
      <div>
        <%= link_to 'Go back', directors_path %>
      </div>

      <div>
        <%= link_to 'Edit director', edit_director_path(@director) %>
      </div>

      <div>
        <%= link_to 'Delete director', @director, method: :delete %>
      </div>
    </div>

    <dl>
      <dt>
        First name
      </dt>
      <dd>
        <%= @director.first_name %>
      </dd>

      <dt>
        Last name
      </dt>
      <dd>
        <%= @director.last_name %>
      </dd>

      <dt>
        Bio
      </dt>
      <dd>
        <%= @director.bio %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@director.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@director.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>
